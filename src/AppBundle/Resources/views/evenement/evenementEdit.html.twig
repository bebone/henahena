{%  extends "::layout.html.twig" %}
{% block contenu %}
    <h1>Modifier un événement</h1>
<form action="{{ path("evenement_edit", { 'id': entity.id })}}" method="post" {{ form_enctype(form) }}>

    <div class="form-group">
        {{ form_errors(form.nom) }}
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.contenu) }}
        {{ form_label(form.contenu) }}
        {{ form_widget(form.contenu) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.dateHeure) }}
        {{ form_label(form.dateHeure) }}
        {{ form_widget(form.dateHeure) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.lieu) }}
        {{ form_label(form.lieu) }}
        {{ form_widget(form.lieu) }}
    </div>


    {{ form_rest(form) }}
    <input type="submit" id="submit" value="" name="submit" />
</form>
{%  endblock %}

{% block scripts %}
{{ parent() }}
<script src="{{asset('bundles/app/ckeditor/ckeditor.js')}}"></script>

<script>
    CKEDITOR.replace( 'evenement_create[contenu]' );
</script>
{% endblock %}
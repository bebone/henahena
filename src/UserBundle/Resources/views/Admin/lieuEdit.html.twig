{%  extends "::layout.html.twig" %}
{% block contenu %}
    <h1>Modifier un lieu</h1>
    <form action="{{ path("lieu_edit", { 'id': entity.id })}}" method="post" {{ form_enctype(form) }}>

        <div class="form-group">
            {{ form_errors(form.nom) }}
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.adresse) }}
            {{ form_label(form.adresse) }}
            {{ form_widget(form.adresse) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.codePostal) }}
            {{ form_label(form.codePostal) }}
            {{ form_widget(form.codePostal) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.commune) }}
            {{ form_label(form.commune) }}
            {{ form_widget(form.commune) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.telephone) }}
            {{ form_label(form.telephone) }}
            {{ form_widget(form.telephone) }}
        </div>


        {{ form_rest(form) }}
        <input type="submit" id="submit" value="Valider" name="submit" />
    </form>
<p>
    {{ parent() }}
</p>
{%  endblock %}

